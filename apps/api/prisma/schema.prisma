enum AttendanceType {
  DAY_ONLY
  BOARDING_ONLY
  MIXED
}

enum SessionType {
  SINGLE
  MULTI
}

enum SessionPeriod {
  MORNING
  AFTERNOON
}

enum SessionRotation {
  FIXED
  ALTERNATING_PER_TERM
}

generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
}

/* =======================
   AUTH & RBAC
======================= */

model Role {
  id          String   @id @default(uuid())
  name        String
  schoolId    String?
  users       User[]
  permissions RolePermission[]

  @@unique([name, schoolId])
}

model Permission {
  id    String @id @default(uuid())
  code  String @unique
  label String

  rolePermissions RolePermission[]
}

model RolePermission {
  roleId       String
  permissionId String

  role       Role       @relation(fields: [roleId], references: [id], onDelete: Cascade)
  permission Permission @relation(fields: [permissionId], references: [id], onDelete: Cascade)

  @@id([roleId, permissionId])
}

model User {
  id           String   @id @default(uuid())
  firstName    String
  lastName     String
  email        String
  passwordHash String
  isActive     Boolean  @default(true)

  roleId       String
  role         Role     @relation(fields: [roleId], references: [id])

  schoolId     String
  school       School   @relation(fields: [schoolId], references: [id])

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  deletedAt    DateTime?

  @@unique([email, schoolId])
  @@index([schoolId])
}


/* =======================
   MULTI-TENANT CORE
======================= */

model SchoolConfiguration {
  id String @id @default(uuid())

  schoolId String @unique
  school   School @relation(fields: [schoolId], references: [id], onDelete: Cascade)

  attendanceType AttendanceType
  sessionType    SessionType

  // Only relevant when sessionType = MULTI
  sessionRotation SessionRotation?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}


model School {
  id        String   @id @default(uuid())
  name      String
  code      String
  email     String?
  phone     String?
  address   String?
  logoUrl   String?

  users         User[]
  academicYears AcademicYear[]
  grades        Grade[]
  subjects      Subject[]
  students Student[]
  admissionNumberSequences  AdmissionNumberSequence[]
  configuration SchoolConfiguration?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deletedAt DateTime?

  @@unique([code])
}

model AcademicYear {
  id        String   @id @default(uuid())
  name      String
  isActive  Boolean  @default(false)

  schoolId  String
  school    School   @relation(fields: [schoolId], references: [id])

  terms     Term[]

  createdAt DateTime @default(now())

  @@unique([name, schoolId])
  @@index([schoolId])
}


model Term {
  id             String   @id @default(uuid())
  name           String
  startDate      DateTime
  endDate        DateTime

  academicYearId String
  academicYear   AcademicYear @relation(fields: [academicYearId], references: [id])

  @@index([academicYearId])
}

model Grade {
  id        String   @id @default(uuid())
  name      String
  level     Int?

  schoolId  String
  school    School   @relation(fields: [schoolId], references: [id])

  subjects  Subject[]
  students  Student[]

  createdAt DateTime @default(now())

  @@unique([name, schoolId])
}


model Subject {
  id        String   @id @default(uuid())
  name      String
  code      String?

  schoolId  String
  school    School   @relation(fields: [schoolId], references: [id])

  gradeId   String?
  grade     Grade?   @relation(fields: [gradeId], references: [id])

  createdAt DateTime @default(now())

  @@unique([name, schoolId])
}

enum Gender {
  MALE
  FEMALE
  OTHER
}

model Student {
  id           String   @id @default(uuid())
  firstName    String
  lastName     String
  gender       Gender?
  dateOfBirth  DateTime?

  admissionNo  String
  isActive     Boolean  @default(true)

  schoolId     String
  school       School   @relation(fields: [schoolId], references: [id])

  gradeId      String
  grade        Grade    @relation(fields: [gradeId], references: [id])
  
   addresses    StudentAddress[]      // 
  medicalProfile StudentMedicalProfile?
  guardians    StudentGuardian[]
  sponsor      StudentSponsor?

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  deletedAt    DateTime?

  @@unique([admissionNo, schoolId])
  @@index([schoolId])
  @@index([gradeId])
}

model AdmissionNumberSequence {
  id             String   @id @default(uuid())
  schoolId       String
  prefix         String   // e.g. "AD2025", "ADM-", "S-"
  currentCounter Int      @default(0)
  padding        Int      @default(5)
  isActive       Boolean  @default(true)

  school         School   @relation(fields: [schoolId], references: [id])
   createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  @@unique([schoolId, prefix])
}


model Address {
  id        String   @id @default(uuid())
  line1     String
  line2     String?
  city      String
  province  String?
  country   String
  postalCode String?
  studentAddresses StudentAddress[]
  createdAt DateTime @default(now())
}

model StudentAddress {
  id        String   @id @default(uuid())
  studentId String
  addressId String
  type      AddressType

  student Student @relation(fields: [studentId], references: [id])
  address Address @relation(fields: [addressId], references: [id])

  @@unique([studentId, type])
}

enum AddressType {
  HOME
  POSTAL
  HOME_POSTAL
}

model StudentMedicalProfile {
  id          String   @id @default(uuid())
  studentId   String   @unique

  medicalAidName   String?
  medicalAidNumber String?
  bloodType        String?
  allergies        String?
  chronicConditions String?

  student Student @relation(fields: [studentId], references: [id])
}

model Guardian {
  id        String   @id @default(uuid())
  firstName String
  lastName  String
  phone     String
  email     String?
students  StudentGuardian[]
  createdAt DateTime @default(now())
}

model StudentGuardian {
  id          String   @id @default(uuid())
  studentId   String
  guardianId  String
  relationship String
  isPrimary   Boolean @default(false)

  student  Student  @relation(fields: [studentId], references: [id])
  guardian Guardian @relation(fields: [guardianId], references: [id])

  @@unique([studentId, guardianId])
}

model Sponsor {
  id        String   @id @default(uuid())
  name      String
  type      SponsorType
  contact   String?
students  StudentSponsor[]
  createdAt DateTime @default(now())
}

enum SponsorType {
  PARENT
  SCHOLARSHIP
  ORGANISATION
}

model StudentSponsor {
  id        String   @id @default(uuid())
  studentId String   @unique
  sponsorId String

  student Student @relation(fields: [studentId], references: [id])
  sponsor Sponsor @relation(fields: [sponsorId], references: [id])
}
